<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/login_bg"
        android:weightSum="10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5"
            android:gravity="center">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                android:src="@drawable/logo_new"/>

        </LinearLayout>

        <EditText
            android:id="@+id/etRegName"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/customborder"
            android:textColorHint="@android:color/darker_gray"
            android:hint="First Name"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="16dp"
            android:padding="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"/>



        <EditText
            android:id="@+id/etRegLastName"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/customborder"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Last Name"
            android:maxLines="1"
            android:inputType="text"
            android:textSize="16dp"
            android:padding="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"/>

        <EditText
            android:id="@+id/etRegEmail"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/customborder"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Email"
            android:text=""
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:textSize="16dp"
            android:padding="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"/>

        <EditText
            android:id="@+id/etRegPassword"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/customborder"
            android:textColorHint="@android:color/darker_gray"
            android:hint="Password"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textSize="16dp"
            android:padding="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"/>


        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/customborder"
            android:hint="GMC Number"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16dp"
            android:maxLines="1"
            android:text=""
            android:inputType="text"
            android:id="@+id/etRegGmcNum"
            android:padding="10dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes I have read and accepted the \nterms and condition and the privacy policy"
            android:layout_below="@+id/button_login"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"/>


        <Button
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@+id/spinner_select_category_login"
            android:background="@drawable/login_button_customborder"
            android:layout_centerInParent="true"
            android:id="@+id/btnRegLogin"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@android:color/white"

            />




    </LinearLayout>

    <include
        layout="@layout/layout_loader"
        />



</RelativeLayout>
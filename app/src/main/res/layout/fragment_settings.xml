<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adaxiom.subFragments.FragNotification"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

    <EditText
        android:id="@+id/etSettingsName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/border_et"
        android:textColorHint="@android:color/darker_gray"
        android:drawableLeft="@drawable/ic_user"
        android:hint="Name"
        android:maxLines="1"
        android:inputType="text"
        android:textSize="13dp"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/etSettingsPassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_et"
        android:textColorHint="@android:color/darker_gray"
        android:drawableLeft="@drawable/ic_lock"
        android:hint="Password"
        android:maxLines="1"
        android:inputType="textPassword"
        android:textSize="13dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/etSettingsPhone"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_et"
        android:textColorHint="@android:color/darker_gray"
        android:drawableLeft="@drawable/ic_phone"
        android:hint="Phone"
        android:maxLines="1"
        android:inputType="text"
        android:textSize="13dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        />



    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnSaveInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_marginRight="16dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnEditInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:layout_marginRight="16dp"/>



</RelativeLayout>

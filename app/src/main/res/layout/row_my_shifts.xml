<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Splash"
    android:padding="5dp">


    <LinearLayout
        android:id="@+id/rowMyShiftPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_my_shift"
        android:weightSum="10"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvRowJobsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respiratory"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/tvRowJobsDep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHO on Call"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="12dp"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/tvRowJobsHospitalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pool Hospital NHS Foundation Trust"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:textSize="10dp"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/tvMyShiftLable"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Approved"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="14dp"
                android:maxLines="1"
                android:background="@drawable/lable_approved"
                android:layout_marginTop="5dp"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvRowJobsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$60"
                android:textColor="@color/light_black"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Per Hour"
                android:textColor="@color/light_black"
                android:gravity="center"
                android:textSize="8dp"
                />

            <TextView
                android:id="@+id/tvRowJobsTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 - 21:00"
                android:layout_below="@+id/button_login"
                android:layout_centerInParent="true"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="12dp"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/tvRowJobsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 16"
                android:textColor="@color/dark_grey"
                android:gravity="center"
                android:textSize="12dp"
                android:maxLines="1"
                />




        </LinearLayout>


    </LinearLayout>

